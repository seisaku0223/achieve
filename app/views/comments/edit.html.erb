<div class="container">
  <div class="col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1">
    <h2>コメントを編集する</h2>

    <p>編集対象のブログ情報</p>

    <p class="left">タイトル：<%= @comment.blog.title %></p>
    <p class="left">本文：<%= @comment.blog.content %></p>

    <%= form_for(@comment, url: blog_comment_path, method: 'put') do |f| %>
    <%= f.error_messages! %>
    <%= f.label :content %>
    <%= f.text_field :content, class: 'form-control' %>
    <%= f.submit '編集する', class: 'btn btn-primary btn-block' %>
    <% end %>
    <%= link_to "ブログ一覧画面に戻る", blogs_path %>
  </div>
</div>
