<div class="container">
  <h2><%= @user.name %>さんの詳細情報</h2>
  <p><%= profile_img(@user) %></p>
  <p>名前：<%= @user.name %></p>
  <p>メール：<%= @user.email %></p>

  <h1>フォロー一覧</h1>

  <div class="row user_btm_space">
    <% @user.followed_users.each do |user| %>
      <div class="container-child col-md-2 col-sm-4 col-xs-6 user_border1">
        <p><%= profile_img(user) %></p>
        <p><%= user.name %></p>
        <p><%= user.email %></p>
      </div>
    <% end %>
  </div>
  <div class="row">
    <p>フォロワー</p>
    <% @user.followers.each do |user| %>
      <div class="container-child col-md-2 col-sm-4 col-xs-6 user_border1">
        <p><%= profile_img(user) %></p>
        <p><%= user.name %></p>
        <p><%= user.email %></p>
      </div>
    <% end %>
  </div>
</div>
