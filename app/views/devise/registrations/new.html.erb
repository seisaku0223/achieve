<div class="container">
  <div class="wrapper col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1">
    <h2>サインアップ</h2>

    <%= alert %>

    <%= form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス" %>
      </div>

      <!-- 名前入力用のフィールドを追加 -->
      <div class="field">
        <%= f.text_field :name, class: "form-control", placeholder: "名前" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード( 6文字以上必須 )" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "パスワード（確認用）" %>
      </div>

      <div class="actions">
        <%= f.submit "サインアップ", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
